<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Основная информация о приложении -->
    <key>CFBundleName</key>
    <string>gRPC Client</string>
    
    <key>CFBundleDisplayName</key>
    <string>gRPC Client Module</string>
    
    <key>CFBundleIdentifier</key>
    <string>com.nexy.grpc-client</string>
    
    <key>CFBundleVersion</key>
    <string>1.0.0</string>
    
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>
    
    <key>CFBundlePackageType</key>
    <string>FMWK</string>
    
    <!-- Информация о разработчике -->
    <key>CFBundleGetInfoString</key>
    <string>gRPC Client Module for Nexy Voice Assistant</string>
    
    <key>CFBundleSignature</key>
    <string>????</string>
    
    <!-- Минимальная версия macOS -->
    <key>LSMinimumSystemVersion</key>
    <string>10.15</string>
    
    <!-- Поддерживаемые архитектуры -->
    <key>LSArchitecturePriority</key>
    <array>
        <string>arm64</string>
        <string>x86_64</string>
    </array>
    
    <!-- Категория приложения -->
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.developer-tools</string>
    
    <!-- Поддержка темной темы -->
    <key>NSRequiresAquaSystemAppearance</key>
    <false/>
    
    <!-- Разрешения для сетевых соединений -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
        <key>NSExceptionDomains</key>
        <dict>
            <key>localhost</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
            </dict>
        </dict>
    </dict>
    
    <!-- Разрешения для работы с сетью -->
    <key>NSNetworkVolumes</key>
    <true/>
    
    <!-- Разрешения для работы с файлами -->
    <key>NSFileProviderPresence</key>
    <true/>
    
    <!-- Информация о модуле -->
    <key>NSModuleDescription</key>
    <string>Modular gRPC client with retry mechanisms and health checking</string>
    
    <key>NSModuleVersion</key>
    <string>1.0.0</string>
    
    <!-- Поддерживаемые протоколы -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>gRPC Protocol</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>grpc</string>
                <string>grpcs</string>
            </array>
        </dict>
    </array>
    
    <!-- Разрешения для работы с системными процессами -->
    <key>NSAppleEventsUsageDescription</key>
    <string>This module needs to communicate with system processes for gRPC operations</string>
    
    <!-- Разрешения для работы с сетью -->
    <key>NSLocalNetworkUsageDescription</key>
    <string>This module needs network access for gRPC communication</string>
    
    <!-- Разрешения для работы с файлами -->
    <key>NSDocumentsFolderUsageDescription</key>
    <string>This module needs access to documents for configuration and logging</string>
</dict>
</plist>
