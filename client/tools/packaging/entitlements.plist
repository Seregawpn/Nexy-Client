<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- ======================================== -->
    <!-- ОСНОВНЫЕ НАСТРОЙКИ БЕЗОПАСНОСТИ -->
    <!-- ======================================== -->
    
    <!-- Developer ID (не Mac App Store) -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- ======================================== -->
    <!-- HARDENED RUNTIME ТРЕБОВАНИЯ -->
    <!-- ======================================== -->
    
    <!-- JIT компиляция для Python интерпретатора -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Разрешить выполнение unsigned кода (для Python модулей) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Отключить защиту исполняемых страниц -->
    <key>com.apple.security.cs.disable-executable-page-protection</key>
    <true/>
    
    <!-- Разрешить загрузку библиотек для Sparkle/плагинов -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Разрешить переменные окружения DYLD -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    
    <!-- ======================================== -->
    <!-- АУДИО УСТРОЙСТВА -->
    <!-- ======================================== -->
    
    <!-- Доступ к микрофону -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    
    <!-- Доступ к динамикам -->
    <key>com.apple.security.device.audio-output</key>
    <true/>
    
    <!-- Работа с Core Audio -->
    <key>com.apple.security.device.audio-unit</key>
    <true/>
    
    <!-- Настройки аудио -->
    <key>com.apple.security.device.audio-settings</key>
    <true/>
    
    <!-- Bluetooth устройства -->
    <key>com.apple.security.device.bluetooth</key>
    <true/>
    
    <!-- USB устройства -->
    <key>com.apple.security.device.usb</key>
    <true/>
    
    <!-- ======================================== -->
    <!-- INPUT PROCESSING МОДУЛЬ -->
    <!-- ======================================== -->
    
    <!-- Apple Events для системных событий клавиатуры -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- ======================================== -->
    <!-- SCREENSHOT CAPTURE МОДУЛЬ -->
    <!-- ======================================== -->
    
    <!-- Доступ к камере -->
    <key>com.apple.security.device.camera</key>
    <true/>
    
    <!-- ======================================== -->
    <!-- СЕТЕВЫЕ СОЕДИНЕНИЯ -->
    <!-- ======================================== -->
    
    <!-- Клиентские соединения -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Серверные соединения -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- ======================================== -->
    <!-- ФАЙЛОВАЯ СИСТЕМА -->
    <!-- ======================================== -->
    
    <!-- Файлы, выбранные пользователем -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- ======================================== -->
    <!-- СИСТЕМНЫЕ СОБЫТИЯ И АВТОМАТИЗАЦИЯ -->
    <!-- ======================================== -->
    
    <!-- Системные события -->
    <key>com.apple.security.device.system-events</key>
    <true/>
    
    <!-- Печать -->
    <key>com.apple.security.print</key>
    <true/>
    
</dict>
</plist>
