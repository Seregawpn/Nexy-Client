{
  "apple_id": "your@email.com",
  "team_id": "YOUR_TEAM_ID",
  "bundle_id": "com.nexy.screenshot.capture",
  "app_name": "Nexy Screenshot Capture",
  "version": "1.0.0",
  "short_version": "1.0.0",
  "developer_id": "Developer ID Application: Your Name (TEAM_ID)",
  "entitlements_file": "entitlements/screenshot_capture.entitlements",
  "info_plist": "info/Info.plist",
  "icon_file": "../assets/screenshot_capture.icns",
  "install_location": "/Applications",
  "categories": [
    "public.app-category.productivity"
  ],
  "permissions": {
    "screen_capture": true,
    "camera": true,
    "apple_events": true,
    "file_access": true,
    "network": false,
    "location": false,
    "contacts": false,
    "calendar": false,
    "reminders": false,
    "photos": false,
    "bluetooth": false,
    "wifi": false
  },
  "notarization": {
    "provider": "YOUR_PROVIDER",
    "timeout": 600,
    "retry_attempts": 3,
    "retry_delay": 30
  },
  "signing": {
    "timestamp": true,
    "hardened_runtime": true,
    "restrict": true,
    "library_validation": true
  },
  "packaging": {
    "format": "pkg",
    "compression": "gzip",
    "strip_debug": true,
    "optimize": true
  }
}
