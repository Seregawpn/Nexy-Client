<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Основная информация о приложении -->
    <key>CFBundleName</key>
    <string>Nexy Voice Recognition</string>
    
    <key>CFBundleDisplayName</key>
    <string>Nexy Voice Recognition</string>
    
    <key>CFBundleIdentifier</key>
    <string>com.nexy.voice.recognition</string>
    
    <key>CFBundleVersion</key>
    <string>1.0.0</string>
    
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>
    
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    
    <key>CFBundleExecutable</key>
    <string>voice_recognition</string>
    
    <key>CFBundleIconFile</key>
    <string>app.icns</string>
    
    <!-- Минимальная версия macOS -->
    <key>LSMinimumSystemVersion</key>
    <string>10.15</string>
    
    <!-- Поддерживаемые архитектуры -->
    <key>LSArchitecturePriority</key>
    <array>
        <string>arm64</string>
        <string>x86_64</string>
    </array>
    
    <!-- Права на микрофон -->
    <key>NSMicrophoneUsageDescription</key>
    <string>This app needs access to your microphone for voice recognition functionality.</string>
    
    <!-- Права на аудио -->
    <key>NSAudioUsageDescription</key>
    <string>This app needs access to audio devices for voice recognition and playback.</string>
    
    <!-- Права на сеть -->
    <key>NSNetworkUsageDescription</key>
    <string>This app needs network access for Google Speech Recognition API.</string>
    
    <!-- Категория приложения -->
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.productivity</string>
    
    <!-- Поддержка темной темы -->
    <key>NSRequiresAquaSystemAppearance</key>
    <false/>
    
    <!-- Поддержка высокого разрешения -->
    <key>NSHighResolutionCapable</key>
    <true/>
    
    <!-- Поддержка Retina -->
    <key>NSRequiresAquaSystemAppearance</key>
    <false/>
    
    <!-- Поддержка полноэкранного режима -->
    <key>LSUIElement</key>
    <true/>
    
    <!-- Поддержка фонового режима -->
    <key>UIBackgroundModes</key>
    <array>
        <string>audio</string>
    </array>
    
    <!-- Поддержка многопоточности -->
    <key>NSPrincipalClass</key>
    <string>NSApplication</string>
    
    <!-- Поддержка автоматического обновления -->
    <key>SUEnableAutomaticChecks</key>
    <true/>
    
    <!-- Поддержка Sparkle -->
    <key>SUFeedURL</key>
    <string>https://your-update-server.com/appcast.xml</string>
    
    <!-- Поддержка подписи -->
    <key>SUPublicEDKey</key>
    <string>YOUR_PUBLIC_ED_KEY</string>
    
    <!-- Поддержка проверки подписи -->
    <key>SUEnableSystemProfiling</key>
    <true/>
    
    <!-- Поддержка логирования -->
    <key>NSLoggingLevel</key>
    <string>Debug</string>
    
    <!-- Поддержка отладки -->
    <key>NSDebugEnabled</key>
    <true/>
</dict>
</plist>
