# =====================================================
# ПРИМЕР КОНФИГУРАЦИИ ГОЛОСОВОГО АССИСТАНТА
# =====================================================
# Скопируйте этот файл в config.env и заполните реальными значениями

# Google Gemini API
# Получите ключ на: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# Google Search API
# Получите ключ в Google Cloud Console: https://console.cloud.google.com/
GSEARCH_API_KEY=YOUR_GOOGLE_SEARCH_API_KEY_HERE

# Custom Search Engine ID
# Создайте на: https://cse.google.com/
GSEARCH_CSE_ID=YOUR_CUSTOM_SEARCH_ENGINE_ID_HERE

# Edge TTS
EDGE_TTS_VOICE=ru-RU-SvetlanaNeural
EDGE_TTS_RATE=+0%
EDGE_TTS_VOLUME=+0%

# gRPC Server
GRPC_HOST=0.0.0.0
GRPC_PORT=50051

# PostgreSQL Database
# Установите PostgreSQL: brew install postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voice_assistant_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Audio Settings
SAMPLE_RATE=48000
CHUNK_SIZE=1024

# Logging
LOG_LEVEL=INFO

# Performance
MAX_SENTENCE_LENGTH=200
MAX_WORKERS=10
