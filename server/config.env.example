# =====================================================
# ПРИМЕР КОНФИГУРАЦИИ ГОЛОСОВОГО АССИСТАНТА
# =====================================================
# Скопируйте этот файл в config.env и заполните реальными значениями

# Google Gemini API
# Получите ключ на: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# Google Search API
# Получите ключ в Google Cloud Console: https://console.cloud.google.com/
GSEARCH_API_KEY=YOUR_GOOGLE_SEARCH_API_KEY_HERE

# Custom Search Engine ID
# Создайте на: https://cse.google.com/
GSEARCH_CSE_ID=YOUR_CUSTOM_SEARCH_ENGINE_ID_HERE

# Edge TTS
EDGE_TTS_VOICE=ru-RU-SvetlanaNeural
EDGE_TTS_RATE=+0%
EDGE_TTS_VOLUME=+0%

# Azure Speech Services
SPEECH_KEY=YOUR_AZURE_SPEECH_KEY_HERE
SPEECH_REGION=YOUR_AZURE_SPEECH_REGION_HERE

# gRPC Server
GRPC_HOST=0.0.0.0
GRPC_PORT=50051

# PostgreSQL Database
# Установите PostgreSQL: brew install postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voice_assistant_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Audio Settings - СИНХРОНИЗИРОВАНО С КЛИЕНТОМ
# ВАЖНО: Эти значения должны совпадать с client/config/unified_config.yaml
# unified_config.yaml: audio.sample_rate = 48000, audio.chunk_size = 1024, audio.format = int16
SAMPLE_RATE=48000  # Должно совпадать с unified_config.yaml:audio.sample_rate
CHUNK_SIZE=1024    # Должно совпадать с unified_config.yaml:audio.chunk_size

# Logging
LOG_LEVEL=INFO

# Performance
MAX_SENTENCE_LENGTH=200
MAX_WORKERS=10
